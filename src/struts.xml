<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />

    <package name="log" namespace="/admin" extends="struts-default">
    	<action name="login" class="logAction" method="login">
    		<result name="success">/admin/index.jsp</result>
    		<result name="error">/admin/sign-in.jsp</result>
    	</action>
    	<action name="logout" class="logAction" method="logout">
    		<result name="success">/admin/sign-in.jsp</result>
    	</action>
    </package>
    
    <package name="management" namespace="/admin" extends="struts-default">
    	<action name="*_*" class="{1}Action" method="{2}">
    		<result name="success">/admin/{1}_{2}_success.jsp</result>
    		<result name="list">/admin/{1}_{2}.jsp</result>
    		<result name="query">/admin/{1}_edit.jsp</result>
    	</action>
    </package>

</struts>
